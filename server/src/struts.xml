<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" tag="testcode" value="true" />

	<package name="demonhunter" extends="struts-default">

        <!-- If no class attribute is specified the framework will assume success and 
        render the result index.jsp -->
        <!-- If no name value for the result node is specified the success value is the default -->
		<action name="index">
			<result>/index.jsp</result>
		</action>
		
		<!-- If the URL is hello.action the call the execute method of class HelloWorldAction.
		If the result returned by the execute method is success render the HelloWorld.jsp -->
		<action name="hello" class="com.dh.action.ApiDoAction" method="execute">
			<result name="res_android">/output_android.jsp</result>
			<result name="res_wp">/output_wp.jsp</result>
		</action>
	
		<action name="deploy" class="com.dh.action.DeployAction" method="execute">
			<result name="res_android">/output_android.jsp</result>
			<result name="res_wp">/output_wp.jsp</result>
		</action>
		
	</package>

</struts>
